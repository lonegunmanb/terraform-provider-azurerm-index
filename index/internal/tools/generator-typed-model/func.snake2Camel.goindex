func snake2Camel(input string) string {
	segs := strings.Split(input, "_")
	var out string
	for _, seg := range segs {
		if seg == "" {
			continue
		}
		out += strings.ToUpper(string(seg[0])) + seg[1:]
	}
	return out
}
