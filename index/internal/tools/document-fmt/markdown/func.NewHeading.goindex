package github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-fmt/markdown
import (
	"fmt"
	"regexp"
	"strings"
)
func NewHeading(line string) Heading {
	heading := Heading{}

	r := regexp.MustCompile(`^(#{1,6})(.*)$`)
	matches := r.FindStringSubmatch(line)

	if len(matches) == 3 {
		heading.Raw = matches[0]
		heading.Level = len(matches[1])
		heading.Text = strings.TrimSpace(matches[2])
	}

	return heading
}
