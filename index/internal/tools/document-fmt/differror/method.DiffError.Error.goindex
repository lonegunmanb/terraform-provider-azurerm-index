package github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-fmt/differror
import (
	"fmt"
	"strings"

	"github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-fmt/util"
)
func (e DiffError) Error() string {
	b := strings.Builder{}

	b.WriteString(fmt.Sprintf("%s\n", e.t))
	b.WriteString(util.Red(fmt.Sprintf("- %s\n", e.c)))
	b.WriteString(util.Green(fmt.Sprintf("+ %s", e.e)))

	return b.String()
}
