package github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-lint/md
import (
	"fmt"
	"os"
	"strings"
	"unicode"

	"github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-lint/model"
	"github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-lint/util"
)
func blocksHaveSameDefinition(b1, b2 Block) bool {
	// Blocks are considered the same if they have the same fields
	if len(b1.Fields) != len(b2.Fields) {
		return false
	}

	// Compare each field
	for i, f1 := range b1.Fields {
		if i >= len(b2.Fields) {
			return false
		}
		f2 := b2.Fields[i]
		if f1.Name != f2.Name || f1.Required != f2.Required {
			return false
		}
	}

	return true
}
