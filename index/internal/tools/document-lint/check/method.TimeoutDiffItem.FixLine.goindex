package github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-lint/check
import (
	"fmt"
	"strings"
	"time"

	"github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-lint/model"
	"github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-lint/schema"
	"github.com/hashicorp/terraform-provider-azurerm/internal/tools/document-lint/util"
)
func (t *TimeoutDiffItem) FixLine(line string) string {
	if t.Want <= 0 {
		return line
	}
	// find place to replace
	start, end := util.TimeoutValueIdx(line)
	if end <= start {
		return line
	}
	res := fmt.Sprintf("%s%s%s", line[:start], t.ValueString(), line[end:])
	return res
}
