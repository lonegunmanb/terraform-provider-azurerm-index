func findUpgradeGuide(dir string) string {
	if _, err := os.Stat(dir); os.IsNotExist(err) {
		return ""
	}

	pattern := filepath.Join(dir, "*-upgrade-guide.html.markdown")
	matches, err := filepath.Glob(pattern)
	if err != nil || len(matches) == 0 {
		return ""
	}

	return matches[0]
}
