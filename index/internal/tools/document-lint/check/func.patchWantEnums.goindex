func patchWantEnums(want []string) string {
	// Sort the values before formatting
	sorted := sortPossibleValues(want)

	res := make([]string, len(sorted))
	for idx, val := range sorted {
		res[idx] = "`" + val + "`"
	}
	if len(res) == 1 {
		return res[0]
	}

	s := res[0]
	if len(res) >= 3 {
		s = strings.Join(res[:len(res)-1], ", ")
	}
	s += " and " + res[len(res)-1]
	return s
}
