package github.com/hashicorp/terraform-provider-azurerm/internal/provider/framework
import (
	"context"
	"encoding/base64"
	"fmt"
	"os"
	"strings"

	"github.com/hashicorp/terraform-plugin-framework/types"
)
func getEnvBoolOrDefault(val types.Bool, envVar string, def bool) bool {
	if val.IsNull() || val.IsUnknown() {
		v := os.Getenv(envVar)
		if strings.EqualFold(v, "true") || strings.EqualFold(v, "1") || v == "" {
			return true
		} else {
			return def
		}
	}

	return val.ValueBool()
}
