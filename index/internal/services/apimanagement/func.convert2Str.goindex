func convert2Str(rawVal interface{}) (string, error) {
	var value string
	if val, ok := rawVal.(string); ok {
		value = val
	} else {
		val, err := json.Marshal(rawVal)
		if err != nil {
			return "", fmt.Errorf("failed to marshal to json: %+v", err)
		}
		value = string(val)
	}
	return value, nil
}
