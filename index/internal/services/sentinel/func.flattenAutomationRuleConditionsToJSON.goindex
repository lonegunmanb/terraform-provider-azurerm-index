func flattenAutomationRuleConditionsToJSON(input *[]automationrules.AutomationRuleCondition) (string, error) {
	if input == nil || len(*input) == 0 {
		return "", nil
	}
	result, err := json.Marshal(input)
	return string(result), err
}
