package github.com/hashicorp/terraform-provider-azurerm/internal/services/containerapps/helpers
import (
	"reflect"
	"strings"

	"github.com/hashicorp/go-azure-helpers/lang/pointer"
	"github.com/hashicorp/go-azure-sdk/resource-manager/containerapps/2025-07-01/jobs"
	"github.com/hashicorp/terraform-provider-azurerm/internal/tf/pluginsdk"
	"github.com/hashicorp/terraform-provider-azurerm/internal/tf/validation"
)
func expandContainerJobVolumeMounts(input []ContainerVolumeMount) *[]jobs.VolumeMount {
	if input == nil {
		return nil
	}
	volumeMounts := make([]jobs.VolumeMount, 0)
	for _, v := range input {
		volumeMounts = append(volumeMounts, jobs.VolumeMount{
			MountPath:  pointer.To(v.Path),
			VolumeName: pointer.To(v.Name),
			SubPath:    pointer.To(v.SubPath),
		})
	}

	return &volumeMounts
}
