func flattenJSON(stringMap interface{}) string {
	if stringMap != nil {
		if v, ok := stringMap.(*interface{}); ok {
			stringMap = *v
		}
		value := stringMap.(map[string]interface{})
		jsonString, err := pluginsdk.FlattenJsonToString(value)
		if err == nil {
			return jsonString
		}
	}

	return ""
}
