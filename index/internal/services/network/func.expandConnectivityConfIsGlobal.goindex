func expandConnectivityConfIsGlobal(input bool) *connectivityconfigurations.IsGlobal {
	output := connectivityconfigurations.IsGlobalFalse
	if input {
		output = connectivityconfigurations.IsGlobalTrue
	}
	return &output
}
