func flattenFunctionFiles(input interface{}) (*string, error) {
	if input == nil {
		return nil, nil
	}

	raw, err := json.Marshal(input)
	if err != nil {
		return nil, fmt.Errorf("could not marshal `config_json`: %+v", err)
	}
	result := string(raw)
	return &result, nil
}
