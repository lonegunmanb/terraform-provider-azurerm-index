func expandInheritedRoles(input []string, dbName string) *[]mongorbacs.Role {
	if len(input) == 0 {
		return nil
	}

	result := make([]mongorbacs.Role, 0, len(input))
	for _, v := range input {
		inheritedRole := mongorbacs.Role{
			Db:   pointer.To(dbName),
			Role: pointer.To(v),
		}

		result = append(result, inheritedRole)
	}

	return &result
}
